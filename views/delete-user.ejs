<div class="auth-page">
    <div class="form-card">
        <h3 style="color: var(--error-red);">Delete Account</h3>
        
        <p class="helper-text" style="text-align: center; margin-bottom: 20px;">
            To confirm deletion, please enter your password. 
            <br><strong>This action cannot be reverted!</strong>
        </p>

        <form action="/user/delete" method="POST">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>
            </div>

            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" name="confirm_password" id="confirm_password" required>
            </div>

            <div class="form-actions" style="flex-direction: column; gap: 10px;">
                <button type="submit" class="btn-primary" style="background-color: var(--error-red); width: 100%;">
                    Yes, Delete My Account
                </button>
                
                <a href="/user/profile" class="btn-primary btn-back" style="width: 92.5%;">
                    Nevermind, take me back
                </a>
            </div>
        </form>
    </div>
</div>