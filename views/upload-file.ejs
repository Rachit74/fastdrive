<div class="auth-page">
    <div class="form-card">
        <h3>Upload to FastDrive</h3>
        
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Select File</label>
                <input 
                    type="file" 
                    id="file" 
                    name="file" 
                    class="file-input-styled" 
                    required
                />
            </div>
            <div class="folder-status">
                <% if (!folder) { %>
                    <p class="helper-text">Uploading to: <strong>Root Directory</strong></p>
                <% } else { %>
                    <p class="helper-text">Uploading to folder: <strong><%= folder.folder_name %></strong></p>
                    <input type="hidden" name="folder_id" value="<%= folder_id %>">
                <% } %>
            </div>

            <div class="form-actions">
                <a href="/files" class="btn-primary btn-back">
                    Cancel
                </a>
                <button type="submit" class="btn-primary" style="background-color: var(--success-green);">
                    Upload File
                </button>
            </div>
        </form>
    </div>
</div>