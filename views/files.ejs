<div class="container">
    <div class="files-header">
        <% if (folder_id) { %>
            <h2>Folder</h2>
        <%  } else { %>
            <h2>My Files</h2>
        <% } %>
        <span class="file-count"><%= files.length %> items</span>
        <%= folder_id %>
    </div>

    <button 
        class="btn-new-folder"
        hx-get="/upload?folder_id=<%= folder_id %>" 
        hx-target="#modal" 
        hx-trigger="click">
        + Upload File
    </button>

    <div id="modal"></div>
    
    <div class="files-grid">
        <% if (!files || files.length === 0) { %>
            <div class="file-row">
                <p class="file-meta" style="padding: 20px; text-align: center; width: 100%;">
                    No files found. Upload one to get started!
                </p>
            </div>
        <% } else { %>
            <% files.forEach(file => { %>
                <div class="file-row">
                    <div class="file-info">
                        <div class="file-icon">ðŸ“„</div>
                        <div class="file-details">
                            <span class="file-name"><%= file.original_name %></span>
                            <span class="file-meta">
                                <%= file.mime_type %> â€¢ <%= (file.file_size / 1024).toFixed(2) %> KB
                            </span>
                        </div>
                    </div>
                    <div class="file-actions">
                        <a href="/download/<%= file.id %>" class="btn-icon btn-download" title="Download">
        <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor">
            <path d="M7.47 10.78a.75.75 0 0 0 1.06 0l3.75-3.75a.75.75 0 0 0-1.06-1.06L8.75 8.44V1.75a.75.75 0 0 0-1.5 0v6.69L4.78 5.97a.75.75 0 0 0-1.06 1.06l3.75 3.75Z"></path>
            <path d="M2 12.75a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75Z"></path>
        </svg>
    </a>

                        <form method="POST" action="/delete/<%= file.id %>">

                            <button class="btn-icon btn-delete">
                                <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor"><path d="M11 1.75V3h2.25a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1 0-1.5H5V1.75C5 .784 5.784 0 6.75 0h2.5C10.216 0 11 .784 11 1.75ZM4.496 6.675a.75.75 0 1 0-1.492.15l.66 6.623C3.844 14.519 4.73 16 5.938 16h4.124c1.208 0 2.094-1.481 2.274-2.552l.66-6.623a.75.75 0 0 0-1.492-.15l-.66 6.623a.75.75 0 0 1-1.137.552H5.938a.75.75 0 0 1-1.137-.552l-.66-6.623Z"></path></svg>
                            </button>

                        </form>
                        
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>