<div class="auth-page">
    <div class="form-card">
        <h3>Create New Folder</h3>

        <form action="/folder/new" method="POST">
            <div class="form-group">
                <label for="folder_name">Folder Name</label>
                <input
                    type="text"
                    name="folder_name"
                    id="folder_name"
                    placeholder="e.g. Work Documents"
                    required
                    autofocus
                />
            </div>

            <% if (typeof folder_id !== 'undefined') { %>
                <input type="hidden" name="folder_id" value="<%= folder_id %>">
            <% } %>

            <div class="form-actions">
                <a href="/folder/folders" class="btn-primary btn-back">
                    Cancel
                </a>
                <button type="submit" class="btn-primary" style="background-color: var(--success-green);">
                    Create Folder
                </button>
            </div>
        </form>
    </div>
</div>