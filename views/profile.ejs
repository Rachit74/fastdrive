<div class="auth-page">
    <div class="signup-container profile-card">
        <div class="profile-header">
            <h2><%= user.username %></h2>
            <p class="profile-email"><%= user.email %></p>
        </div>

        <div class="profile-actions">
            <a href="/profile/update" class="btn-edit">Edit profile</a>
            <a href="/profile/delete" class="btn-delete">Delete profile</a>
        </div>
    </div>
</div>